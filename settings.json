{
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--enable=F,E,W,C,R"
    ],
    "python.linting.pylintPath": "pylint",
    "python.linting.pylintUseMinimalCheckers": false,
    "python.linting.enabled": true,
    "python.linting.pylintCategorySeverity.c": "Warning",
    "python.linting.pylintCategorySeverity.w": "Warning",
    "python.linting.pylintCategorySeverity.e": "Error",
    "python.linting.pylintCategorySeverity.f": "Error",
    "python.linting.pylintCategorySeverity.r": "Error",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=88"
    ],
    "editor.formatOnSave": true
}